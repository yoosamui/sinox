#!/bin/bash

#--------------------
# needs root access
# https://wiki.archlinux.org/index.php/Rofi
#--------------------

echo "install all software from debian repo"
apt install \
build-essential \
cmake \
git \
gitk \
network-manager \
network-manager-gnome \
libgtkmm-3.0-dev \
libwnck-3-dev \
autotools-dev \
autoconf \
pk-update-icon \
rofi \
libtool \
gettext \
autopoint \
intltool \
clang-format \
vim \
vim-athena \
fortunes \
cowsay \
fortune-mod \
compton \
wicd \
firefox-esr \
pavucontrol \
nemo \
thunar \
redshift \
gedit \
firefox-esr \
gnome-terminal \
openbox \
compton \
lightdm \
gdm3 \
arandr \
grub-customizer \
gnome-settings-daemon \
xfce4-panel \
xfce4-power-manager \
xfce4-whiskermenu-plugin \
xfce4-datetime-plugin \
xfce4-battery-plugin \
xfce4-indicator-plugin \
xfce4-pulseaudio-plugin \
lxappearance \
nitrogen \
policykit-1-gnome \
chromium \
geany \
lxinput \
lxrandr \
transmission -y


apt update
apt autoremove -y

echo "done"

echo "install docker"
apt install apt-transport-https ca-certificates curl software-properties-common -y
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
apt-get update
apt-get install docker.io -y


echo "done"

#/sbin/shutdown -r now

exit






